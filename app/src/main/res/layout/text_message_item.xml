<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPallet3"
        app:cardBackgroundColor="#230303"
        app:cardCornerRadius="25dp"
        app:contentPaddingBottom="@dimen/padding4"
        app:contentPaddingLeft="@dimen/padding3"
        app:contentPaddingRight="@dimen/padding3"
        app:contentPaddingTop="@dimen/padding4"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.setvene.jm.pinessys.components.RoundedImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="TODO"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                android:visibility="visible"
                app:cornerRadius="10dp" />

            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="Hola como estas quiero sab"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize4" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>